#:import Button kivy.uix.button.Button
#: import buttons_width_coef src.backend.constants.BUTTONS_WIDTH_COEF
#: import button_image src.backend.constants.BUTTON_IMAGE
#: import button_red_pressed_image src.backend.constants.BUTTON_RED_PRESSED_IMAGE
#: import you_win_image src.backend.constants.YOU_WIN_IMAGE
#: import notebook_image src.backend.constants.NOTEBOOK_IMAGE
#: import screen_utils src.backend.ScreenUtils.ScreenUtils
#: import change_language src.Globals.change_language
#: import set_texture src.Globals.set_texture
<MenuScreen>:
    BoxLayout:
        size_hint: 0.5, 0.6
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        padding: '10dp'
        spacing: self.height / 40
        Button:
            text: 'Levels'
            on_press: root.manager.transition.direction = 'left';root.manager.current = 'levels'
            background_normal: button_image
            background_down: button_red_pressed_image
        Button:
            text: 'Tutorial'
            on_press: root.manager.transition.direction = 'left';root.manager.current = 'tutorial'
            background_normal: button_image
            background_down: button_red_pressed_image
        Button:
            text: 'Quit'
            on_press: app.stop()
            background_normal: button_image
            background_down: button_red_pressed_image

    BoxLayout:
        size_hint: 0.3, 0.1
        pos_hint:  {'right': 1, 'bot': 0}
        orientation: 'horizontal'
        spacing: '10dp'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'Eng'
            on_press: change_language('eng')
        Button:
            text: 'Рус'
            on_press: change_language('ru')

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: buttons_width_coef
        Button:
            text: 'restart'
            on_press: root.restart()
            size_hint: None, None
            size: self.parent.width, self.parent.width
            background_normal: button_image
            background_down: button_red_pressed_image
        Button:
            id: field_switch
            text: 'to target\nfield'
            halign: 'center'
            on_press: root.switch_field()
            size_hint: None, None
            size: self.parent.width, self.parent.width
            background_normal: button_image
            background_down: button_red_pressed_image
        Button:
            text: 'undo'
            on_press: root.undo()
            size_hint: None, None
            size: self.parent.width, self.parent.width
            background_normal: button_image
            background_down: button_red_pressed_image
        Widget:
        Button:
            text: 'back'
            on_press: root.manager.transition.direction = 'right';root.manager.current = 'levels';root.clean()
            size_hint: None, None
            size: self.parent.width, self.parent.width
            background_normal: button_image
            background_down: button_red_pressed_image

<LevelsScreen>:
    Button:
        text: 'back'
        on_press: root.manager.transition.direction = 'right';root.manager.current = 'menu'
        size_hint: (None, None)
        size: (root.width / 8, root.height / 7)
        pos: (0, 0)
        background_normal: button_image
        background_down: button_red_pressed_image

    ScrollView:
        size_hint: 0.7, 0.7
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            cols: 4
            padding: '10dp'
            spacing: self.height / 40
            row_default_height: self.parent.height / 5
            row_force_default: True
            on_parent:
                for i in range(100): self.add_widget(
                Button(
                text = "Level {0}".format(i+1),
                background_normal = root.get_button_image(i)[0],
                background_down = root.get_button_image(i)[1],
                on_press=lambda _, lvl=i:root.go_to_lvl(lvl+1)
                )
                )

<WinningWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.4
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.5, 0.5)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Image:
            source: you_win_image
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'to lvls'
                on_press: root.parent.manager.transition.direction = 'right';root.parent.manager.current = 'levels';root.parent.clean()
                background_normal: button_image
                background_down: button_red_pressed_image
            Button:
                text: 'restart'
                on_press: root.parent.restart()
                background_normal: button_image
                background_down: button_red_pressed_image
            Button:
                id: next_lvl_button
                text: 'next lvl'
                on_press: root.parent.go_to_next_lvl()
                background_normal: button_image
                background_down: button_red_pressed_image


<RulesScrollViewWidget>:
    ScrollView:
        id: rule_scroll_view
        size_hint: None, None
        pos: screen_utils.get_scrollview_pos_n_size()[0]
        size: screen_utils.get_scrollview_pos_n_size()[1]
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: notebook_image
        GridLayout:
            id: grid
            cols: 1
            spacing: self.height / 20
            padding: '10dp'
            size_hint_y: None
            height: self.minimum_height
    Button:
        size_hint: None, None
        height: root.ids.rule_scroll_view.height / 8
        width: root.ids.rule_scroll_view.width
        pos_hint: None, None
        pos: root.ids.rule_scroll_view.pos
        text: 'All rules'
        on_press: root.parent.show_all_rules()
        background_normal: set_texture('all_rules_btn')
        background_down: button_red_pressed_image

<Task>:
    Label:
        id: title
        text: root.title_text
        color: 0, 0, 0, 1
        pos_hint: {'center_y': 0.8, 'center_x': root.screen_utils.get_field_middle_x_ratio()}
        size_hint: 0.3, 0.18
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
