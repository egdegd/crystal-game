#:import Button kivy.uix.button.Button
#: import buttons_width_coef src.backend.constants.BUTTONS_WIDTH_COEF
<MenuScreen>:
    BoxLayout:
        Button:
            text: 'Levels'
            on_press: root.manager.current = 'levels'
        Button:
            text: 'Quit'
            on_press: app.stop()

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: buttons_width_coef
        Button:
            text: 'restart'
            on_press: root.restart()
            size_hint: None, None
            size: self.parent.width, self.parent.width
        Button:
            id: field_switch
            text: 'to target\nfield'
            halign: 'center'
            on_press: root.switch_field()
            size_hint: None, None
            size: self.parent.width, self.parent.width
        Button:
            text: 'all rules'
            on_press: root.show_all_rules()
            size_hint: None, None
            size: self.parent.width, self.parent.width
        Button:
            text: 'undo'
            on_press: root.undo()
            size_hint: None, None
            size: self.parent.width, self.parent.width
        Widget:
        Button:
            text: 'back'
            on_press: root.manager.current = 'levels';root.clean()
            size_hint: None, None
            size: self.parent.width, self.parent.width

<LevelsScreen>:
    Button:
        text: 'back'
        on_press: root.manager.current = 'menu'
        size_hint: (None, None)
        size: (100, 100)
        pos: (0, 0)

    ScrollView:
        size_hint: None, None
        size: 500, 320
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            cols: 1
            padding: 10
            spacing: 10
            size_hint_y: None
            height: self.minimum_height
            on_parent:
                for i in range(15): self.add_widget(
                Button(
                text = "Level {0}".format(i),
                size_hint = (None, None),
                size = (480, 40),
                background_color = self.parent.parent.get_button_color(i),
                on_press=lambda _, lvl=i:self.parent.parent.go_to_lvl(lvl)
                )
                )

<WinningWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.4
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.5, 0.5)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'You win!'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            font_size: 0.7 * min(self.height, self.width/4)
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'to lvls'
                on_press: root.parent.manager.current = 'levels';root.parent.clean()
            Button:
                text: 'restart'
                on_press: root.parent.restart()
            Button:
                text: 'next lvl'
                on_press: root.parent.go_to_next_lvl()
