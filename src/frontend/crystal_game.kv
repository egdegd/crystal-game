<MenuScreen>:
    BoxLayout:
        Button:
            text: 'Goto game'
            on_press: root.manager.current = 'game'
        Button:
            text: 'Quit'
            on_press: app.stop()

<GameScreen>:
    Button:
        text: 'restart'
        on_press: self.parent.restart()
        size_hint: (None, None)
        size: (100, 100)
        pos: (700, 500)
