#:import Button kivy.uix.button.Button
#: import buttons_width_coef src.backend.constants.BUTTONS_WIDTH_COEF
#: import screen_utils src.backend.ScreenUtils.ScreenUtils
<MenuScreen>:
    BoxLayout:
        size_hint: 0.5, 0.3
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        padding: '10dp'
        spacing:'10dp'
        Button:
            text: 'Levels'
            on_press: root.manager.current = 'levels'
        Button:
            text: 'Quit'
            on_press: app.stop()

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: buttons_width_coef
        Button:
            text: 'restart'
            on_press: root.restart()
            size_hint: None, None
            size: self.parent.width, self.parent.width
        Button:
            id: field_switch
            text: 'to target\nfield'
            halign: 'center'
            on_press: root.switch_field()
            size_hint: None, None
            size: self.parent.width, self.parent.width
        Button:
            text: 'undo'
            on_press: root.undo()
            size_hint: None, None
            size: self.parent.width, self.parent.width
        Widget:
        Button:
            text: 'back'
            on_press: root.manager.current = 'levels';root.clean()
            size_hint: None, None
            size: self.parent.width, self.parent.width

<LevelsScreen>:
    Button:
        text: 'back'
        on_press: root.manager.current = 'menu'
        size_hint: (None, None)
        size: (100, 100)
        pos: (0, 0)

    ScrollView:
        size_hint: 0.7, 0.7
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        do_scroll_x: False
        do_scroll_y: True

        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            cols: 4
            padding: '10dp'
            spacing: '10dp'
            row_default_height: self.parent.height / 5
            row_force_default: True
            on_parent:
                for i in range(30): self.add_widget(
                Button(
                text = "Level {0}".format(i),
                background_color = root.get_button_color(i),
                on_press=lambda _, lvl=i:root.go_to_lvl(lvl)
                )
                )

<WinningWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.4
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.5, 0.5)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        canvas.before:
            Color:
                rgba: 0, 0, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'You win!'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            font_size: 0.7 * min(self.height, self.width/4)
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'to lvls'
                on_press: root.parent.manager.current = 'levels';root.parent.clean()
            Button:
                text: 'restart'
                on_press: root.parent.restart()
            Button:
                text: 'next lvl'
                on_press: root.parent.go_to_next_lvl()


<RulesScrollViewWidget>:
    ScrollView:
        id: rule_scroll_view
        size_hint: None, None
        pos: screen_utils.get_scrollview_pos_n_size()[0]
        size: screen_utils.get_scrollview_pos_n_size()[1]
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            id: grid
            cols: 1
            spacing: 50
            padding: (0, 50)
            size_hint_y: None
            height: self.minimum_height
    Button:
        size_hint: None, None
        height: 70
        width: root.ids.rule_scroll_view.width
        pos_hint: None, None
        pos: root.ids.rule_scroll_view.pos
        text: 'All rules'
        on_press: root.parent.show_all_rules()