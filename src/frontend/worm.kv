<Form>:
    canvas:
        Color:
            rgba: self.r, self.g, 0, 1
        Rectangle:
            size: self.rec_size
            pos: (200, 100)

<Cell>:
    canvas:
        Color:
            rgba: self.r, 0, self.b, 1
        Rectangle:
            size: self.size
            pos: self.pos

<MyTriangle>:
    canvas:
        Color:
            rgba: self.r, self.g, self.b, self.a
        Triangle:
            points: self.points

<Polygon>:
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Line:
            points: self.points + self.points[:2]
            width: 2